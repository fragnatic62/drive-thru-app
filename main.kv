<OrderTakerCamera>:
    Video:
        source: "assets/big_buck_bunny_720p_1mb.mp4"
        state: "play"
        options: {'eos': 'loop'}
        allow_stretch: True

<CustomerCamera>:
    Video:
        source: "assets/big_buck_bunny_720p_1mb.mp4"
        state: "play"
        options: {'eos': 'loop'}
        allow_stretch: True

<FullImage>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10

<AdvertisementSpace>:
    FullImage:
        source: 'assets/test-image.png'
        size: self.texture_size

<AppLayout>
    FloatLayout:
        size: root.width, root.height
    
        OrderTakerCamera:
            padding: 4
            pos_hint: {'x':0, 'y':0.4}
            size_hint: 0.5, 0.68

        CustomerCamera:
            padding: 4
            pos_hint: {'x':0.5, 'y':0.4}
            size_hint: 0.5, 0.68
        
        AdvertisementSpace:
            padding:5
            pos_hint: {'x':0, 'y':0}
            size_hint: 1, 0.47
        
        Button:
            text: "Click me"
            pos_hint: {'x':0, 'y':0}
            size_hint: 1, 0.05
        



