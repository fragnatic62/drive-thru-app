<OrderTakerCamera>:
    Video:
        source: "big_buck_bunny_720p_1mb.mp4"
        state: "play"
        options: {'eos': 'loop'}
        # allow_stretch: True

<CustomerCamera>:
    Video:
        source: "big_buck_bunny_720p_1mb.mp4"
        state: "play"
        options: {'eos': 'loop'}
        # allow_stretch: True

<FullImage>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10

<AdvertisementSpace>:
    FullImage:
        source: 'test-image.png'
        size: self.texture_size

<AppLayout>
    FloatLayout:
        size: root.width, root.height
    
        OrderTakerCamera:
            pos_hint: {'x':0, 'y':0.4}
            size_hint: 0.5, 0.6

        CustomerCamera:
            pos_hint: {'x':0.5, 'y':0.4}
            size_hint: 0.5, 0.6
        
        AdvertisementSpace:
            pos_hint: {'x':0, 'y':0}
            size_hint: 1, 0.4
        



