<FullImage>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10

<AppLayout>
    FloatLayout:
        size: root.width, root.height
    
        BoxLayout:
            id: order_component
            padding: 4
            pos_hint: {'x':0, 'y':0.4}
            size_hint: 0.5, 0.68
            Video:
                source: root.video_src
                state: "play"
                options: {'eos': 'loop'}
                allow_stretch: True


        BoxLayout:
            id: customer_component
            padding: 4
            pos_hint: {'x':0.5, 'y':0.4}
            size_hint: 0.5, 0.68
            Video:
                source: root.video_src
                state: "play"
                options: {'eos': 'loop'}
                allow_stretch: True

        
        BoxLayout:
            id: ads_component
            FullImage:
                source: root.img_src
                size: self.texture_size
                padding:5
                pos_hint: {'x':0, 'y':0}
                size_hint: 1, 0.47

        



